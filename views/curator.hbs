<h2>Curator list</h2>

<div class="input-field">
    {{#if curator.length}}
    <ul>
        {{#each curator}}
        <li class="curator">
            <label>
                <span>{{Lastname}}</span>
                <span>{{Name}}</span>
                <span>{{Surname}}</span>


                <input class="btn btn-small delete" name="delete" data-id="{{_id}}" type="button" value="Delete">
                <a class="btn btn-small update" type="button" href="/edit_curator/{{_id}}">Update</a>
            </label>
        </li>
        {{/each}}
    </ul>
    <a class="btn btn-small update" type="button" href="/add_curator/{{_id}}">Add</a>
    <script>
        document.addEventListener('click', (e) => {
            const id = e.target?.dataset?.id || null
            if (id) {
                fetch(`/curator/${id}`, {
                    method: 'DELETE',
                }).then(() => {
                    window.location.reload();
                })
            }
        })
    </script>
    {{else}}
    <p>No tobos!</p>
    <a class="btn btn-small update" type="button" href="/add_students/{{_id}}">Add</a>
    {{/if}}
</div>